<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sachet.tasktimer.AddEditActivityFragment"
    tools:showIn="@layout/activity_add_edit">

    <EditText
        android:id="@+id/addedit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="@string/addedit_name"
        android:inputType="textNoSuggestions"
        android:maxLength="64"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addedit_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/addedit_description"
        android:inputType="textMultiLine"
        android:maxLength="256"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/addedit_name"
        app:layout_constraintStart_toStartOf="@+id/addedit_name"
        app:layout_constraintTop_toBottomOf="@+id/addedit_name" />

    <Button
        android:id="@+id/addedit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@android:drawable/ic_menu_save"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:text="@string/add_edit_save"
        app:layout_constraintEnd_toEndOf="@+id/addedit_sortorder"
        app:layout_constraintStart_toStartOf="@+id/addedit_sortorder"
        app:layout_constraintTop_toBottomOf="@+id/addedit_sortorder" />

    <EditText
        android:id="@+id/addedit_sortorder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/addedit_sortorder"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/addedit_description"
        app:layout_constraintStart_toStartOf="@+id/addedit_description"
        app:layout_constraintTop_toBottomOf="@+id/addedit_description" />

</android.support.constraint.ConstraintLayout>
